{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "pkg",
    "outDir": "dist/backend",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "types"]
  },
  "exclude": ["dist", "node_modules"],
  "extends": "@grafana/tsconfig",
  "include": ["pkg/**/*.ts*"]
}
