{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "rootDirs": ["src"],
    "typeRoots": ["node_modules/@types", "types"]
  },
  "exclude": ["dist", "node_modules", "skel"],
  "extends": "@grafana/tsconfig",
  "include": ["src/**/*.ts*", "src/proto/*"]
}
